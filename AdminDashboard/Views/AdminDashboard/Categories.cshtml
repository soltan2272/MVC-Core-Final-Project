@using Models;
@model IPagedList<Category>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewData["Title"] = "Categories";
}


<div class="all-content-wrapper">

    <div class="product-status mg-b-30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Products List</h4>
                        <div class="add-product">
                            @Html.ActionLink("Add Category", "AddCategory")

                            <a href="product-edit.html"></a>
                        </div>
                        <table>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Display</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>

                            @foreach (Category category in Model)
                            {
                        <tr>


                            <td>@category.Name</td>
                            <td>@category.Description</td>


                            <td>
                                @Html.ActionLink("Display", "CategoryProducts", new { ID = @category.ID }, new { @class = "btn btn-primary" })

                            </td>

                            <td>
                                @Html.ActionLink("Update", "Updateategory", new { ID = @category.ID }, new { @class = "btn btn-success" })

                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteCategory", new { ID = @category.ID }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                            }



                        </table>


                        <div class="custom-pagination">

                            <ul class="pagination">

                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    <li class="@(i == Model.PageNumber ? "page-item active" : "page-item")">
                                        <a class="page-link" href="@Url.Action("Categories", new { p = i })">@i</a>
                                    </li>

                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    .checked {
        color: orange;
    }
</style>

