 @using Models;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<User>;

@{
    ViewData["Title"] = "Stores";
}
 
<style>
    .checked {
        color: orange;
    }
</style>

<div class="all-content-wrapper">

    <div class="product-status mg-b-30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Store List</h4>

                        <table>
                            <tr>
                                <th scope="col">Store Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Display</th>
                            </tr>

                            @foreach (User saller in Model)
                            {
                                <tr>
                                    <td>@saller.Full_Name Store</td>
                                    <td>0@saller.Phone</td>
                                    <td>@saller.Email</td>


                                    <td>
                                        @Html.ActionLink("Display", "StoreProduct", new { @saller.Id }, new { @class = "btn btn-primary" })

                                    </td>


                                </tr>
                            }



                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="custom-pagination">

        <ul class="pagination">

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="@(i == Model.PageNumber ? "page-item active" : "page-item")">
                    <a class="page-link" href="@Url.Action("Stores", new { p = i })">@i</a>
                </li>

            }

        </ul>
    </div>
</div>
     